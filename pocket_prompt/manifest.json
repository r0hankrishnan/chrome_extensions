
{
  "manifest_version": 3,
  "name": "Pocket Prompt",
  "version": "1.1",
  "description": "Save, tag, and reuse LLM prompts.",
  "permissions": ["storage", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
